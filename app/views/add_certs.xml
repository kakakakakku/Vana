<Alloy>
	<Window id="addCertsWin" title="Passed Infomation" tabBarHidden="true">
		<ScrollView id="addCertsWrap" layout="vertical" onClick="blurTextArea">
			<Label>資格名</Label>
			<TextField id="textField" onFocus="selectCert" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED" color="#336699" top="10" left="10" width="250" height="30" onClick="selectCert" />
			<Label onClick="selectCert">ここを押して下さい</Label>
			<Picker id="name" onChange="setName" selectionIndicator="true" useSpinner="true">
				<PickerColumn id="certifications">
					<PickerRow title="XML Master Basic" />
					<PickerRow title="XML Master Professional Application Developer" />
					<PickerRow title="Sun Certified Programmer for the Java 2 Platform" />
					<PickerRow title="LPIC-1 Certification" />
					<PickerRow title="LPIC-2 Certification" />
					<PickerRow title="Ruby Association Certified Ruby Programmer Silver" />
					<PickerRow title="Ruby Association Certified Ruby Programmer Gold" />
					<PickerRow title="Titanium Certified Developer" />
					<PickerRow title="Titanium Certified Expert" />
					<PickerRow title="基本情報技術者試験" />
					<PickerRow title="応用情報技術者試験" />
					<PickerRow title="データベーススペシャリスト試験" />
					<PickerRow title="情報セキュリティスペシャリスト試験" />
				</PickerColumn>
			</Picker>
			<Label>カテゴリー</Label>
			<Picker id="category" onChange="setCategory" selectionIndicator="true" useSpinner="true">
				<PickerColumn id="categories">
					<PickerRow title="プログラミング" />
					<PickerRow title="サーバー" />
					<PickerRow title="スマートフォン" />
				</PickerColumn>
			</Picker>
			<Label>資格取得日</Label>
			<Picker id="timestamp" />
			<Label>コメント</Label>
			<TextArea id="comment" />
			<Button id="saveCert" title="保存する" onClick="saveCert" />
		</ScrollView>
	</Window>
</Alloy>